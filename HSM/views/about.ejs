      align-items: center;
      justify-content: space-around;
      margin-bottom: 30px;
    }

    /* Responsive Layout */
    @media (max-width: 768px) {
      .row {
        flex-direction: column;
      }

      .col {
        padding: 10px;
      }

      .specialist-section .col {
        flex-direction: column;
        text-align: center;
      }

      .specialist-section .col img {
        margin-bottom: 20px;
      }
    }
  
</style>
    
 

