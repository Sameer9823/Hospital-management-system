<!DOCTYPE html>
<html lang="en">
  <head>
    <!--Meta Data-->
    <%- include('partial/title.ejs'); %> <% if (data.NODE_ENV == 'production') {
    %>
    <!-- Production Stylesheets -->
    <link rel="stylesheet" href="assets/production/css/loginRegister.min.css" />

    <% }else { %>
    <!-- Development Stylesheets -->
    <link rel="stylesheet" href="assets/lib/css/bootstrap.min.css" />
    <link rel="stylesheet" href="assets/lib/css/fontawesome.min.css" />
    <link rel="stylesheet" href="assets/lib/css/responsive.css" />
    <link rel="stylesheet" href="assets/lib/css/select2.min.css" />
    <link rel="stylesheet" href="assets/lib/css/spacing.css" />
    <link rel="stylesheet" href="assets/lib/css/style.css" />
    <link rel="stylesheet" href="assets/lib/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="assets/lib/css/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" href="assets/lib/css/magnific-popup.css" />
    <link rel="stylesheet" href="assets/css/header.css" />
    <link rel="stylesheet" href="assets/css/form1.css" />

    <% } %>
  </head>

  <body onLoad="typeWriter()">
    <!--Header-->
    <%- include('partial/header.ejs', {data: data }); %>

    <div
      style="
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        margin: 2rem auto;
        max-width: 1200px;
        background-color: #f9f9f9;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      "
    >
      <!-- Image Section -->
      <div style="flex: 1; text-align: center">
        <img
          src="https://images.pexels.com/photos/7088526/pexels-photo-7088526.jpeg?auto=compress&cs=tinysrgb&w=600"
          alt="Patient Registration Image"
          style="
            width: 100%;
            border-radius: 10px;
            object-fit: cover;
            height: 850px;
          "
        />
      </div>

      <!-- Form Section -->
      <div
        class="contact-area"
        style="
          flex: 1;
          background-color: #65aee6;
          border-radius: 10px;
          height: 850px;
          display: flex;
          align-items: center;
        "
      >
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="contact-form headstyle user-login-tab">
                <!-- Registration Header -->
                <ul class="nav nav-tabs mt_15" role="tablist">
                  <li style="background-color: aliceblue" class="nav-item">
                    <a
                      class="nav-link active"
                      data-toggle="tab"
                      href="#"
                      role="tab"
                      style="font-size: 24px; font-weight: bold"
                      >Patient Registration</a
                    >
                  </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content">
                  <div
                    class="tab-pane active"
                    id="patientRegistration"
                    role="tabpanel"
                  >
                    <form
                      action="/patientregistration"
                      method="POST"
                      accept-charset="utf-8"
                    >
                      <div class="form-row row mt_20">
                        <!-- Name Field -->
                        <div class="form-group col-12">
                          <p style="font-weight: 500">Name</p>
                          <input
                            type="text"
                            class="form-control"
                            placeholder="Name"
                            name="name"
                            autocomplete="off"
                            required
                            style="border-radius: 8px"
                          />
                        </div>

                        <!-- Date of Birth Field -->
                        <div class="form-group col-12">
                          <p style="font-weight: 500">Date of birth</p>
                          <input
                            type="text"
                            placeholder="MM/DD/YYYY"
                            onfocus="(this.type='date')"
                            onblur="(this.type='text')"
                            name="dob"
                            autocomplete="off"
                            required
                            style="border-radius: 8px"
                          />
                        </div>

                        <!-- Address Field -->
                        <div class="form-group col-12">
                          <p style="font-weight: 500">Address</p>
                          <textarea
                            style="height: 60px; border-radius: 8px"
                            class="form-control"
                            id="validationTextarea"
                            placeholder="Address"
                            name="address"
                            autocomplete="off"
                            required
                          ></textarea>
                        </div>

                        <!-- Phone Number Field -->
                        <div class="form-group col-12">
                          <p style="font-weight: 500">Phone Number</p>
                          <input
                            id="phonenum"
                            type="tel"
                            class="form-control"
                            placeholder="Phone Number (format:+91'xxxxxxxxxx')"
                            name="phone"
                            pattern="^\d{10}$"
                            minlength="10"
                            autocomplete="off"
                            required
                            style="border-radius: 8px"
                          />
                        </div>

                        <!-- Email Field -->
                        <div class="form-group col-12">
                          <p style="font-weight: 500">Email Address</p>
                          <input
                            type="email"
                            class="form-control"
                            placeholder="Email Address"
                            name="username"
                            autocomplete="off"
                            required
                            style="border-radius: 8px"
                          />
                        </div>

                        <!-- Password Field -->
                        <div class="form-group col-12">
                          <p style="font-weight: 500">Set your password</p>
                          <input
                            type="password"
                            class="form-control"
                            placeholder="Password"
                            name="password"
                            autocomplete="off"
                            required
                            style="border-radius: 8px"
                          />
                        </div>

                        <!-- Checkbox -->
                        <div class="form-group col-12">
                          <input
                            type="checkbox"
                            class="form-check-input"
                            id="exampleCheck1"
                            required
                          />
                          <label class="form-check-label" for="exampleCheck1"
                            >I have read the terms and conditions</label
                          >
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group col-12">
                          <button
                            type="submit"
                            class="btn"
                            name="form_registration"
                            style="
                              background-color: #007bff;
                              color: white;
                              padding: 10px 20px;
                              border-radius: 8px;
                              width: 100%;
                              font-weight: bold;
                              cursor: pointer;
                              transition: all 0.3s;
                            "
                          >
                            Register
                          </button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <!-- End of contact-form -->
            </div>
            <!-- End of col -->
          </div>
          <!-- End of row -->
        </div>
        <!-- End of container -->
      </div>
      <!-- End of contact-area -->
    </div>

    <!--Footer-->
    <%- include('partial/footer.ejs'); %>

    <script>
      var i = 0;
      var txt = 'WELCOME TO MEDBUDDY';
      var speed = 60;

      function typeWriter() {
        if (i < txt.length) {
          document.getElementById('typeit').innerHTML += txt.charAt(i);
          i++;
          setTimeout(typeWriter, speed);
        }
      }
    </script>

    <!-- JavaScript -->
    <script defer src="assets/lib/js/jquery-3.4.1.min.js"></script>
    <script defer src="assets/lib/js/popper.min.js"></script>
    <script defer src="assets/lib/js/bootstrap.bundle.min.js"></script>
    <script defer src="assets/lib/js/all.min.js"></script>
    <script defer src="assets/lib/js/select2.full.min.js"></script>
    <script defer src="assets/js/about.js"></script>
  </body>
</html>
